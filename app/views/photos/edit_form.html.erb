<h1>Edit A New photo</h1>

<form action="http://localhost:3000/create_photo">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= @caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @image_url %>">
  </div>
  <div>
    <input type="submit" value="Update photo">
  </div>
</form>
